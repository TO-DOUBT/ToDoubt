<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto">

    <LinearLayout
        android:id="@+id/linear_contorno_fila_jugador_plantilla"
        android:layout_width="350dp"
        android:layout_height="40dp"
        android:padding="1dp"
        android:background="@drawable/estilo_fila_background"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent">
    <LinearLayout
        android:id="@+id/linear_fila_jugador_plantilla"
        android:layout_width="350dp"
        android:layout_height="40dp"
        android:layout_margin="0dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent">

        <HorizontalScrollView
            android:layout_width="200dp"
            android:layout_height="40dp"
            android:scrollbars="none">

            <TextView
                android:id="@+id/txt_nombre_completo_jugador"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:fontFamily="@font/actor"
                android:padding="10dp"
                android:text="Sebastián Huete Londoño"
                android:textSize="15dp" />

        </HorizontalScrollView>

        <TextView
            android:id="@+id/txt_dorsal_jugador"
            android:layout_width="45dp"
            android:layout_height="wrap_content"
            android:layout_marginStart="70dp"
            android:fontFamily="@font/actor"
            android:inputType="number"
            android:padding="10dp"
            android:text="10"
            android:textSize="15dp"

            />
    </LinearLayout>
    </LinearLayout>

</androidx.constraintlayout.widget.ConstraintLayout>
