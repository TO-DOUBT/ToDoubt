<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".DetallePartido">

    <androidx.cardview.widget.CardView
        android:id="@+id/dp_CV_datosPartido"
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:backgroundTint="@color/black"
        app:cardElevation="0dp"
        app:layout_constraintBottom_toTopOf="@+id/dp_gd_5"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent">

        <androidx.constraintlayout.widget.ConstraintLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent">

            <ImageView
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:src="@drawable/campo"
                android:scaleType="centerCrop"/>

            <androidx.constraintlayout.widget.Guideline
                android:id="@+id/dp_gd_3"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                app:layout_constraintGuide_begin="16dp" />

            <androidx.constraintlayout.widget.Guideline
                android:id="@+id/dp_gd_4"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                app:layout_constraintGuide_end="16dp" />

            <androidx.constraintlayout.widget.Guideline
                android:id="@+id/dp_gd_6"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                app:layout_constraintGuide_end="48dp" />

            <androidx.constraintlayout.widget.Guideline
                android:id="@+id/dp_gd_7"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                app:layout_constraintGuide_begin="43dp" />

            <androidx.constraintlayout.widget.Guideline
                android:id="@+id/dp_gd_8"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                app:layout_constraintGuide_begin="110dp" />

            <androidx.constraintlayout.widget.Guideline
                android:id="@+id/dp_gd_9"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                app:layout_constraintGuide_end="110dp" />

            <androidx.constraintlayout.widget.Guideline
                android:id="@+id/dp_gd_10"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                app:layout_constraintGuide_percent="0.5" />

            <ImageView
                android:id="@+id/dp_equipoLocal"
                android:layout_width="0dp"
                android:layout_height="0dp"
                app:layout_constraintBottom_toTopOf="@+id/dp_gd_6"
                app:layout_constraintEnd_toStartOf="@+id/dp_gd_8"
                app:layout_constraintStart_toStartOf="@+id/dp_gd_3"
                app:layout_constraintTop_toTopOf="@+id/dp_gd_7"
                app:layout_constraintVertical_bias="0.0" />

            <ImageView
                android:id="@+id/dp_equipoVisitante"
                android:layout_width="0dp"
                android:layout_height="0dp"
                app:layout_constraintBottom_toTopOf="@+id/dp_gd_6"
                app:layout_constraintEnd_toStartOf="@+id/dp_gd_4"
                app:layout_constraintStart_toStartOf="@+id/dp_gd_9"
                app:layout_constraintTop_toTopOf="@+id/dp_gd_7" />

            <TextView
                android:id="@+id/dp_resultado"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_marginStart="16dp"
                android:layout_marginEnd="16dp"
                android:gravity="center"
                android:textColor="@color/white"
                android:textSize="20sp"
                android:fontFamily="@font/actor"
                app:layout_constraintBottom_toTopOf="@+id/dp_gd_6"
                app:layout_constraintEnd_toStartOf="@+id/dp_gd_9"
                app:layout_constraintStart_toStartOf="@+id/dp_gd_8"
                app:layout_constraintTop_toTopOf="@+id/dp_gd_7" />

            <TextView
                android:id="@+id/dp_nombreLocal"
                android:layout_width="0dp"
                android:layout_height="0dp"
                android:layout_marginTop="8dp"
                android:layout_marginEnd="16dp"
                android:textColor="@color/white"
                android:fontFamily="@font/actor"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintEnd_toStartOf="@+id/dp_gd_10"
                app:layout_constraintStart_toStartOf="@+id/dp_gd_3"
                app:layout_constraintTop_toTopOf="@+id/dp_gd_6" />

            <TextView
                android:id="@+id/dp_nombreVisitante"
                android:layout_width="0dp"
                android:layout_height="0dp"
                android:layout_marginStart="16dp"
                android:layout_marginTop="8dp"
                android:gravity="end"
                android:textColor="@color/white"
                android:fontFamily="@font/actor"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintEnd_toStartOf="@+id/dp_gd_4"
                app:layout_constraintHorizontal_bias="1.0"
                app:layout_constraintStart_toStartOf="@+id/dp_gd_10"
                app:layout_constraintTop_toTopOf="@+id/dp_gd_6"
                app:layout_constraintVertical_bias="0.0" />

            <ImageButton
                android:id="@+id/dp_bck_button"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:backgroundTint="@color/trans"
                app:layout_constraintBottom_toTopOf="@+id/dp_gd_7"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toTopOf="parent"
                app:srcCompat="@drawable/ic_baseline_arrow_back_ios_new_24"
                tools:ignore="SpeakableTextPresentCheck,SpeakableTextPresentCheck" />

        </androidx.constraintlayout.widget.ConstraintLayout>
    </androidx.cardview.widget.CardView>

    <androidx.constraintlayout.widget.Guideline
        android:id="@+id/dp_gd_1"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        app:layout_constraintGuide_begin="16dp" />

    <androidx.constraintlayout.widget.Guideline
        android:id="@+id/dp_gd_2"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        app:layout_constraintGuide_end="16dp" />

    <androidx.constraintlayout.widget.Guideline
        android:id="@+id/dp_gd_5"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        app:layout_constraintGuide_begin="209dp" />

    <androidx.constraintlayout.widget.Guideline
        android:id="@+id/dp_gd_11"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        app:layout_constraintGuide_end="16dp" />

    <androidx.constraintlayout.widget.Guideline
        android:id="@+id/dp_gd_12"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        app:layout_constraintGuide_end="239dp" />


    <View
        android:id="@+id/divider3"
        android:layout_width="0dp"
        android:layout_height="1dp"
        android:background="@color/orange_detail"
        app:layout_constraintBottom_toTopOf="@+id/dp_gd_12"
        app:layout_constraintEnd_toStartOf="@+id/dp_gd_2"
        app:layout_constraintStart_toStartOf="@+id/dp_gd_1" />

    <androidx.cardview.widget.CardView

        android:id="@+id/dp_CV_mapa"
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:layout_marginStart="8dp"
        android:layout_marginTop="8dp"
        android:layout_marginEnd="8dp"
        app:cardCornerRadius="20dp"
        app:cardElevation="0dp"

        app:layout_constraintBottom_toTopOf="@+id/dp_gd_11"
        app:layout_constraintEnd_toStartOf="@+id/dp_gd_2"
        app:layout_constraintStart_toStartOf="@+id/dp_gd_1"
        app:layout_constraintTop_toTopOf="@+id/dp_gd_12">

        <fragment
            android:id="@+id/dp_Mapa"
            android:name="com.google.android.gms.maps.SupportMapFragment"
            android:layout_width="match_parent"
            android:layout_height="match_parent" />
    </androidx.cardview.widget.CardView>

    <ScrollView
        android:id="@+id/dp_scrollView2"
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:layout_marginTop="8dp"
        android:layout_marginBottom="8dp"
        app:layout_constraintBottom_toTopOf="@+id/dp_gd_12"
        app:layout_constraintEnd_toStartOf="@+id/dp_gd_2"
        app:layout_constraintHorizontal_bias="0.0"
        app:layout_constraintStart_toStartOf="@+id/dp_gd_1"
        app:layout_constraintTop_toTopOf="@+id/dp_gd_5"
        app:layout_constraintVertical_bias="0.0">

        <androidx.constraintlayout.widget.ConstraintLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">

            <TextView
                android:id="@+id/dp_alineacionLocal"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:fontFamily="@font/actor"
                android:layout_marginStart="8dp"
                android:layout_marginTop="8dp"
                android:layout_marginEnd="16dp"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintEnd_toStartOf="@+id/dp_gd_14"
                app:layout_constraintHorizontal_bias="1.0"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@+id/textView"
                app:layout_constraintVertical_bias="0.0" />

            <TextView
                android:id="@+id/dp_alineacionVisit"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:fontFamily="@font/actor"
                android:layout_marginStart="16dp"
                android:layout_marginTop="8dp"
                android:layout_marginEnd="8dp"
                android:gravity="start"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toStartOf="@+id/dp_gd_14"
                app:layout_constraintTop_toBottomOf="@+id/textView"
                app:layout_constraintVertical_bias="0.0" />

            <TextView
                android:id="@+id/dp_golesVisitante"
                android:layout_width="0dp"
                android:fontFamily="@font/actor"
                android:layout_height="wrap_content"
                android:layout_marginStart="16dp"
                android:layout_marginTop="8dp"
                android:layout_marginEnd="8dp"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toStartOf="@+id/dp_gd_14"
                app:layout_constraintTop_toBottomOf="@+id/textView2" />

            <TextView
                android:id="@+id/dp_golesLocal"
                android:layout_width="0dp"
                android:fontFamily="@font/actor"
                android:layout_height="wrap_content"
                android:layout_marginStart="8dp"
                android:layout_marginTop="8dp"
                android:layout_marginEnd="16dp"
                app:layout_constraintEnd_toStartOf="@+id/dp_gd_14"
                app:layout_constraintHorizontal_bias="0.0"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@+id/textView2" />

            <androidx.constraintlayout.widget.Guideline
                android:id="@+id/dp_gd_14"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                app:layout_constraintGuide_end="181dp" />

            <TextView
                android:id="@+id/textView"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="16dp"
                android:text="Alineaciones"
                android:textColor="@color/black"
                android:textSize="20sp"
                android:fontFamily="@font/actor"
                app:layout_constraintEnd_toStartOf="@+id/dp_gd_14"
                app:layout_constraintHorizontal_bias="0.238"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@+id/dp_golesLocal" />

            <TextView
                android:id="@+id/textView2"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="8dp"
                android:text="Goles"
                android:textColor="@color/black"
                android:textSize="20sp"
                android:fontFamily="@font/actor"
                app:layout_constraintEnd_toStartOf="@+id/dp_gd_14"
                app:layout_constraintHorizontal_bias="0.123"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toTopOf="parent" />

            <View
                android:id="@+id/divider4"
                android:layout_width="1dp"
                android:layout_height="0dp"
                android:background="@color/fondo"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@+id/textView2" />

        </androidx.constraintlayout.widget.ConstraintLayout>
    </ScrollView>

    <TextView
        android:id="@+id/dp_noDisp"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Información no Disponible"
        android:visibility="invisible"
        android:fontFamily="@font/actor"
        app:layout_constraintBottom_toTopOf="@+id/dp_gd_12"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="@+id/dp_gd_5" />

    <TextView
        android:id="@+id/dp_noDisp2"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Información no Disponible"
        android:visibility="invisible"
        android:fontFamily="@font/actor"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="@+id/dp_gd_12" />


</androidx.constraintlayout.widget.ConstraintLayout>